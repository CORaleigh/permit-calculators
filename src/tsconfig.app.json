{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["arcgis-js-api"]
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "paths": {
    "@app/*": [
      "app/*"
    ],
    "core-js/es7/reflect": [
      "node_modules/core-js/proposals/reflect-metadata"
    ]
  }  
}
